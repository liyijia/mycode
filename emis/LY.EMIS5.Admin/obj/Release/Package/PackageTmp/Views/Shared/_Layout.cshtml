    <script type="text/javascript">

        var Overlay = BUI.Overlay;
        var Calendar = BUI.Calendar;

        $(function () {

            $('select').select2({ 'dropdownAutoWidth': true });
            $(".Logout").click(function () {
                BUI.Message.Confirm('确认要退出成功吗？', function () {
                    location.href = "/Home/Logout";
                }, 'question');
            });

            //密码修改
            $(".UPWD").click(function () {
                UPWD.show();
            });
            SeleceMenu($.cookie('menu'));
            $(".submenu>li>a").click(function () {
                $.cookie('menu', $(this).text(), { path: "/" });
            });
            $("#main-content").css("height", ($(window).height() - 75));
            var UPWD = new Overlay.Dialog({
                title: '密码修改',
                width: 400,
                height: 150,
                contentId: 'Password',
                success: function () {
                    if (!$("#form-upPassword").validate().form())
                        return;
                    ajaxSubmit($("#form-upPassword"), "/Home/upPassword", function (result) {
                        BUI.Message.Alert(result.message, result.icon);
                    });
                    this.close();
                }
            });
        });

        //列表全选功能
        function ListSelectAll() {
            $(".select").click(function () {
                $(".child").prop("checked", $(this).prop("checked"));
            });
        }

        function SeleceMenu(name) {
            var as = $('.submenu>li>a');
            for (var i = 0; i < as.length; i++) {
                if (as.eq(i).text() == name) {
                    as.eq(i).css('background-color', '#3294c8').parents('.limenu').addClass("active").find('b').removeClass('icon-angle-right').addClass('icon-angle-down');
                    break;
                }
            }
        }
    </script>
    @RenderSection("Script", false)
