@using LY.EMIS5.Entities.Core.Memberships;
@using LY.EMIS5.Const;
@using LY.EMIS5.Common.Extensions;
@using LY.EMIS5.Common.Const;

@model Achievement
@{
    ViewBag.Title = "添加业绩";
}@section Script
{

}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                业绩信息
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目名称</label>
                        <div class="col-sm-10">
                            @Html.HiddenFor(m => m.Id)
                            @Html.TextBoxFor(m => m.ProjectName, new { @class = "required form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">规模</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Scale, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">开工时间</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.StartDate, new { @class = "required form-control default-date-picker" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">竣工时间</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.EndDate, new { @class = "required form-control default-date-picker" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目经理</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.ProjectManager, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">类型</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Type, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>