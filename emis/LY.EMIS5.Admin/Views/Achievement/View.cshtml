@using LY.EMIS5.Entities.Core.Memberships;
@using LY.EMIS5.Common;

@model Achievement
@{
    ViewBag.Title = "查看业绩";
}@section Script
{

}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                业绩信息
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目名称</label>
                        <div class="col-sm-10">
                            <label class="control-label">@Model.ProjectName</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">规模</label>
                        <div class="col-sm-10">
                            <label class="control-label">@Model.Scale</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">开工时间</label>
                        <div class="col-sm-10">
                            <label class="control-label">@Model.StartDate.ToYearMonthDayString()</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">竣工时间</label>
                        <div class="col-sm-10">
                            <label class="control-label">@Model.EndDate.ToYearMonthDayString()</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目经理</label>
                        <div class="col-sm-10">
                            <label class="control-label">@Model.ProjectManager</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">类型</label>
                        <div class="col-sm-10">
                            <label class="control-label">@Model.Type</label>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>