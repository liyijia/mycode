@{
    ViewBag.Title = "业绩列表";
}
@using LY.EMIS5.BLL;
@section Script{
    <script type="text/javascript">
        var table = null;
        $(function () {
            table = $('#dynamic-table').dataTable({
                "bServerSide": true,
                "bLengthChange": false,
                "sAjaxSource": "/Achievement/Index",
                "fnServerParams": function (aoData) {
                   
                }, "aoColumns": [
                      { "mData": "ProjectName" },
                      { "mData": "Scale" },
                      { "mData": "StartDate" },
                      { "mData": "EndDate" },
                      { "mData": "ProjectManager" },
                      { "mData": "Type" },
                      { "mData": "Id" }
                ], "bFilter": false, "bSort": false,
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    $('td:eq(6)', nRow).html("<a href=\"/News/View/" + aData.Id + "\">查看</a>");
                    if (aData.Edit) {
                        $('td:eq(6)', nRow).append(' <a href="/Achievement/Create/' + aData.Id + '">编辑</a> <a onclick="Delete(' + aData.Id + ')" href="javascript:;">删除</a>');
                    }
                     
                   
                }
            });
            //搜索
            $(".sreach").click(function () {
                table.dataTable().fnAdjustColumnSizing();
            });

            $('.create').click(function(){
                location.href = "/Achievement/Create";
            });
           
            function Delete(id) {
                $.myDialog('confirm', '确认要该数据吗？', 'confirm', function (dialog) {
                    dialog.modal('hide');
                    location.href = "/Achievement/Delete/" + id;
                })
            }
        });
    </script>
}

<!--body wrapper start-->
<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    业绩列表
                    <span class="tools pull-right form-inline">
                        <input type="button" class="btn btn-default create" value="添加" />
                    </span>
                </header>
                <div class="panel-body">
                    <div class="adv-table">
                        <table class="display table table-bordered table-striped" id="dynamic-table">
                            <thead>
                                <tr>
                                    <th>项目名称</th>
                                    <th>规模</th>
                                    <th>开工时间</th>
                                    <th>竣工时间</th>
                                    <th>项目经理</th>
                                    <th>类型</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
   
</div>
<!--body wrapper end-->