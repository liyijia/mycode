@using LY.EMIS5.Entities.Core.Memberships;
@using LY.EMIS5.Common;

@model Certificate
@{
    ViewBag.Title = "查看证书";
}@section Script
{

}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                证书信息
            </header>
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">岗位</label>
                    <div class="col-sm-10">
                        <label class="control-label">@Model.Post</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">专业</label>
                    <div class="col-sm-10">
                        <label class="control-label">@Model.Major</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">姓名</label>
                    <div class="col-sm-10">
                        <label class="control-label">@Model.Name</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">年审时间</label>
                    <div class="col-sm-10">
                        <label class="control-label">@Model.AnnualVerificationDate.ToYearMonthDayString()</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">备注</label>
                    <div class="col-sm-10">
                        <label class="control-label">@Model.Remarks</label>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>