@using LY.EMIS5.Entities.Core.Stock;
@using LY.EMIS5.Common;

@model Supplier
@{
    ViewBag.Title = "供应商材料";
}@section Script
{
    <script>
        $(function () {
            $('[name="Grade"]').val('@Model.Grade');
        });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                供应商信息
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" method="post">
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">名称</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">电话</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Pnone, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">收款账户名</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Account, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">账号</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.AccountNumber, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">开户银行</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Bank, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">优先级</label>
                        <div class="col-sm-10">
                            <select name="Grade" class="form-control required"><option value="3">高</option><option value="2">中</option><option value="1">低</option></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">备注</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Remark, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>