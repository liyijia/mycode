@using LY.EMIS5.Entities.Core.Memberships;
@using LY.EMIS5.Common;

@model Records
@{
    ViewBag.Title = "添加备案";
}@section Script
{
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                备案信息
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">区域</label>
                        <div class="col-sm-10">
                            @Html.HiddenFor(m => m.Id)
                            @Html.HiddenFor(m => m.Manager.Id)
                            @Html.HiddenFor(m=>m.CreateDate)
                            @Html.TextBoxFor(m => m.Area, new { @class = "required form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">是否备案</label>
                        <div class="col-sm-10">
                            <label>
                                <input type="radio" name="IsRecord" value="true" @(Model == null || Model.IsRecord ? "checked=\"checked\"" : "") class="required">
                                是
                            </label>
                            <label>
                                <input type="radio" name="IsRecord" value="false" @(Model != null && !Model.IsRecord ? "checked=\"checked\"" : "") class="required">
                                否
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">网址</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.WebSite, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">登录名</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Username, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">密码</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Password, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">电话</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">备案情况</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Situation, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">备案时间</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Date, new { @class = "required form-control default-date-picker" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">备注</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Remarks, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">公司</label>
                        <div class="col-sm-10">
                            @foreach (var company in ViewBag.Companys as List<Company>)
                            {
                                <label class="checkbox-inline"><input type="checkbox" name="Company" value="@company.Name" @(Model != null && !string.IsNullOrEmpty(Model.Company) && Model.Company.Contains(company.Name) ? "checked=\"checked\"" : "") />@company.Name</label>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>