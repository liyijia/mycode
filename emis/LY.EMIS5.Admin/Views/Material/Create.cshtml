@using LY.EMIS5.Entities.Core.Stock;
@using LY.EMIS5.Common;

@model Material
@{
    ViewBag.Title = "编辑材料";
}@section Script
{
    <script>
        $(function () {
            if ('@Model.Type' != '') {
                $('[name="Type"]').val('@Model.Type');
            }
        });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                材料信息
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" method="post">
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">名称</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">类型</label>
                        <div class="col-sm-10">
                            <select name="Type" class="form-control required"><option>主材</option><option>辅材</option></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">规格/型号</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Spec, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">品牌</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Brand, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">生产厂家</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Manufactor, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">备注</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Remark, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>