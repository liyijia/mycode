@using LY.EMIS5.Entities.Core.Memberships;
@using LY.EMIS5.Common;

@model Aptitude
@{
    ViewBag.Title = "添加资质";
}@section Script
{

}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                资质信息
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">资质名</label>
                        <div class="col-sm-10">
                            @Html.HiddenFor(m => m.Id)
                            @Html.HiddenFor(m => m.Manager.Id)
                            @Html.HiddenFor(m => m.CreateDate)
                            @Html.TextBoxFor(m => m.Name, new { @class = "required form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">等级</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Level, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">公司</label>
                        <div class="col-sm-10">
                            @foreach (var company in ViewBag.Companys as List<Company>)
                            {
                                <label class="checkbox-inline"><input type="checkbox" name="Company" value="@company.Name" @(Model != null && !string.IsNullOrEmpty(Model.Company) && Model.Company.Contains(company.Name) ? "checked=\"checked\"" : "") />@company.Name</label>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>