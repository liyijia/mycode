@using LY.EMIS5.Entities.Core.Memberships;
@using LY.EMIS5.Common;

@model News
@{
    ViewBag.Title = "添加公告";
}@section Script
{
    <link rel="stylesheet" type="text/css" href="/Scripts/bootstrap-wysihtml5/bootstrap-wysihtml5.css" />
    <script type="text/javascript" src="/Scripts/bootstrap-wysihtml5/wysihtml5-0.3.0.js"></script>
    <script type="text/javascript" src="/Scripts/bootstrap-wysihtml5/bootstrap-wysihtml5.js"></script>
    <script>
        $(function () {
            $('.wysihtml5').wysihtml5();
        });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                公告信息
            </header>
            <div class="panel-body">
                <h3>@Model.Title</h3>
                @Model.Content
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">@Model.Manager.Name</label>
                    <div class="col-sm-10">

                        @Model.CreateDate.ToChineseDateString()
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>