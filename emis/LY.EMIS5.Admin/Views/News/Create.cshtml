@using LY.EMIS5.Entities.Core.Memberships;
@using LY.EMIS5.Const;
@using LY.EMIS5.Common.Extensions;
@using LY.EMIS5.Common.Const;

@model News
@{
    ViewBag.Title = "添加";
}@section Script
{
    <link rel="stylesheet" type="text/css" href="/Scripts/bootstrap-wysihtml5/bootstrap-wysihtml5.css" />
    <script type="text/javascript" src="/Scripts/bootstrap-wysihtml5/wysihtml5-0.3.0.js"></script>
    <script type="text/javascript" src="/Scripts/bootstrap-wysihtml5/bootstrap-wysihtml5.js"></script>
<script>
    $(function () {
        $('.wysihtml5').wysihtml5();
    });
</script>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                @Request.QueryString["t"]信息
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">标题</label>
                        <div class="col-sm-10">
                            @Html.HiddenFor(m => m.Id)
                            @Html.HiddenFor(m => m.Type)
                            @Html.TextBoxFor(m => m.Title, new { @class = "required form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">内容</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Content, new { @class = "wysihtml5 required form-control", @rows = "9" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>