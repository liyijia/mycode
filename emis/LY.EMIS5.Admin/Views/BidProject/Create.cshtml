@using LY.EMIS5.Entities.Core.Memberships;
@using LY.EMIS5.Const;
@using LY.EMIS5.Common.Extensions;
@using LY.EMIS5.Common.Const;
@using LY.EMIS5.Common;
@model BidProject
@{
    ViewBag.Title = "添加中标项目";
}@section Script
{
    <script type="text/javascript">
        $(function () {
            $('.create').click(function () {
                $('#myModal').modal('show');
            });
        });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                中标项目信息
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目名称</label>
                        <div class="col-sm-10">
                            @Html.HiddenFor(m => m.Id)
                            @Html.HiddenFor(m => m.CreateManager.Id)
                            @Html.HiddenFor(m => m.CreateDate)
                            @Html.TextBoxFor(m => m.ProjectName, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目进度</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("ProjectProgress", ViewBag.ProjectProgresses as SelectList, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目类型</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.ProjectType, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">规模</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Scale, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">中标价格(万元)</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Money, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">中标时间</label>
                        <div class="col-sm-10">
                            @Html.TextBox("BidDate", Model.BidDate.ToYearMonthDayString(), new { @class = "form-control default-date-picker" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目所在地</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Address, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目实施人</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">联系电话</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.TeletePhone, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">计划开工时间</label>
                        <div class="col-sm-10">
                            @Html.TextBox("OpenDate", Model.OpenDate.ToYearMonthDayString(), new { @class = "form-control default-date-picker" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">计划竣工时间</label>
                        <div class="col-sm-10">
                            @Html.TextBox("EndDate", Model.EndDate.ToYearMonthDayString(), new { @class = "form-control default-date-picker" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">进场时间</label>
                        <div class="col-sm-10">
                            @Html.TextBox("InDate", Model.InDate.ToYearMonthDayString(), new { @class = "form-control default-date-picker" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">工期</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.TimeLimit, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目经理</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.ProjectManager, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">班组成员</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Members, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目部递交分公司资料</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Data, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">项目部配备资料</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.ProjectData, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">公司</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("Company", ViewBag.Companys as List<SelectListItem>, new { @class = "form-control" })
                        </div>
                    </div>
                    @if (Model.Id > 0)
                    {
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">项目记录</label>
                            <div class="col-sm-10">
                                <div class="text-right">
                                    <a href="/BidProject/Log/@Model.Id" class="btn btn-default ">添加记录</a>
                                </div>
                                <table class="display table table-bordered table-striped" id="dynamic-table">
                                    <thead>
                                        <tr>
                                            <th>记录类型</th>
                                            <th>记录时间</th>
                                            <th>登记人</th>
                                            <th>备注</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model.Logs != null && Model.Logs.Count > 0)
                                            {
                                                foreach (var item in Model.Logs)
                                                {
                                                    <tr>
                                                        <th>@item.Type</th>
                                                        <th>@item.LogDate.ToYearMonthDayString()</th>
                                                        <th>@item.Manager.Name</th>
                                                        <th>@item.Content</th>
                                                    </tr>
                                                }
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                                            }

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
