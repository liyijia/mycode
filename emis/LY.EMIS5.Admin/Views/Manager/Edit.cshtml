@using LY.EMIS5.Entities.Core.Memberships;
@using LY.EMIS5.Const;
@using LY.EMIS5.Common.Extensions;
@using LY.EMIS5.Common.Const;

@model Manager
@{
    ViewBag.Title = "编辑管理员";
}
@section Script{
    <script type="text/javascript">
        $(function () {
            $('[name="Kind"]').val('@Model.Kind');
           
        })
    </script>    
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                管理员资料
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">管理员类型</label>
                        <div class="col-sm-10">
                            <select name="Kind" class="form-control">
                                <option>管理员</option>
                                <option>业务员</option>
                                <option>资料员</option>
                                <option>财务</option>
                                <option>总经理</option>
                                <option>开标人</option>
                                <option>工程部资料员</option>
                                <option>工程部经理</option>
                                <option>会计</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">账号</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">姓名</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "required form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">公司</label>
                        <div class="col-sm-10">
                           @foreach (var company in ViewBag.Companys as List<Company>)
                           {
                            <label class="checkbox-inline"><input type="checkbox" name="Company" value="@company.Name" @(!string.IsNullOrEmpty(Model.Company) && Model.Company.Contains(company.Name) ? "checked=\"checked\"" : "") />@company.Name</label>
                           }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">性别</label>
                        <div class="col-sm-10">
                            <label class="checkbox-inline">@Html.RadioButton("Sex", Sex.Male, Model.Sex == Sex.Male) @Sex.Male.GetDescription()</label>
                            <label class="checkbox-inline">@Html.RadioButton("Sex", Sex.Female, Model.Sex == Sex.Female) @Sex.Female.GetDescription()</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">电话</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Phone, null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>