@using LY.EMIS5.Entities.Core.Stock;

@model StorageSupplier
@{
    ViewBag.Title = "编辑货款";
}@section Script
{
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                货款信息
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">供应商</label>
                        <div class="col-sm-10">
                            @Html.HiddenFor(m => m.Id)
                            @Model.Supplier.Name
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">入库单号</label>
                        <div class="col-sm-10">
                            @Model.Storage.No
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">是否出具发票</label>
                        <div class="col-sm-10">
                            <label class="checkbox-inline">@Html.RadioButton("IsInvoice", true, Model.IsInvoice) 是</label>
                            <label class="checkbox-inline">@Html.RadioButton("IsInvoice", false, !Model.IsInvoice) 否</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">总金额(元)</label>
                        <div class="col-sm-10">
                            @Model.Total
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">已付金额(元)</label>
                        <div class="col-sm-10">
                            @Model.Payment
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">剩余金额(元)</label>
                        <div class="col-sm-10 Debt">
                            @Model.Debt
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">本次支付金额</label>
                        <div class="col-sm-10 input-group">
                            <input type="text" name="pay" class = "required form-control number"/><a href="#" onclick="$(this).prev().val(@Model.Debt)" class="input-group-addon">付清</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>